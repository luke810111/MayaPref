global proc float getMax(float $vArray[],int $i,float $max){
	//float $max;
	$i=$i+1;
	if($vArray[$i]>$max)
		$max=$vArray[$i];
	if($i<`size($vArray)`-1)
		$max=getMax($vArray,$i,$max);
	
	return $max;
	}

