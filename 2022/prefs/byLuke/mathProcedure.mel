/*加p平均浮c --lv1--lp0--rc0
	0:plus
	1:minus
	2:averange
	*/	
global proc float[] plusMnusAverageFloat(int $mode,float $vA[],float $vB[]){

	float $v[];
	if(`size($vA)`==`size($vB)`){
		switch($mode) {
		
			case 0:
				for($i=0;$i<`size($vA)`;$i++){
					$v[$i]=$vA[$i]+$vB[$i];
					}
				break;
			case 1:
				for($i=0;$i<`size($vA)`;$i++){			
				$v[$i]=$vA[$i]-$vB[$i];
				}
				break;	
			case 2:
				for($i=0;$i<`size($vA)`;$i++){			
				$v[$i]=($vA[$i]+$vB[$i])/2;
				}
				break;	
			default:
				break;
			}
	}else{
		print("山M盗坎灰恢");
		}
	return $v;
	}

