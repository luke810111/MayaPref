global proc float rad(float $number, float $root) {
             float $conversion = 1.0/$root;
             float $result = `pow $number $conversion`;
             return $result;
  }
  
/*求立方根 --lv2--lp0--rc0
	*/
global proc float getCubeRoot(float $X,float $Y,float $Z){
        $V=rad((`pow $X 2`+`pow $Y 2`+`pow $Z 2`),3);
        return $V;
        }

/*求平方根 --lv2--lp0--rc0
	*/
global proc float getSqRoot(float $X,float $Y){
        $V=sqrt(`pow $X 2`+`pow $Y 2`);
        return $V;
        }	

