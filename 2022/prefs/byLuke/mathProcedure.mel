global proc int[] intArrayRemoveDuplicates(int $array[], int $x){

    $n=size($array); 
    if ($x>=$n-1){
        return $array; 
    }else{
        intArrayRemoveDuplicates($array, ($x+1)); 
        for($i=($x+1);$i<$n;$i++){ 
            if($array[$x]==$array[$i]) 
				intArrayRemoveAtIndex($i, $array);
            }    
        return $array;
        }
    }
    
