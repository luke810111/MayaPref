global proc float decimalChange(float $in,int $n){           
	int $scale =`pow 10 $n`;
	return (`trunc ($in*$scale)`)/$scale;
	}

/*求b可以被a除状 --lv1--lp0--rc1
	*/
global proc int sqrtM(int $a,int $b){
    int $times;    
    if ($b>=$a){         
        $times=sqrtM($a,($b/$a));
        $times=$times+1;
    }else{
        $times=0;
        }

    return $times;
    }

/*去掉重}的float元素 --lv1--lp1--rc1
	*/
global proc float[] floatArrayRemoveDuplicates(float $array[],int $x){
   /*帝法*/
    $n=size($array);    
    if ($x>=$n-1){
        return $array;
    }else{
        floatArrayRemoveDuplicates($array,($x+1));
        for($i=($x+1);$i<$n;$i++){
            if($array[$x]==$array[$i])
                floatArrayRemoveAtIndex($i, $array);
            }
        return $array;
        }
    }

